<% include ../includes/head %>
<% include navHead %>

<div class="container">
    <div class="row-fluid">
        <div class="span2">
            <% include navBar %>
        </div>
        <div class="span10">
            <form id="courseForm" action="/admin/course/<%= course._id %>" method="post">
                <div>
                    <div>
                        <label>Course ID: </label>
                        <input type="text" name="courseid" value="<%= course.courseId %>" required="true"/>
                    </div>
                    <div>
                        <label>Course Name: </label>
                        <input type="text" name="coursename" value="<%= course.courseName %>" required="true"/>
                    </div>
                    <div>
                        <label>Course Credit: </label>
                        <input type="number" name="coursecredit" value="<%= course.courseCredit %>" required="true"/>
                    </div>
                    <!--Error Message Placeholder-->
                    <input id="hiddenMethod" type="hidden" name="_method" value="put"/>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <button type="button" id="deleteCourse" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#deleteCourse").on("click", function () {
            bootbox.confirm("Are you sure you want to delete it?", function (result) {
                if (result) {
                    $("#hiddenMethod").val("delete");
                    $("#courseForm").submit();
                }
            });
        });
    });
</script>

<% include ../includes/foot %>